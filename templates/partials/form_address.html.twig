{{ form_start(form) }}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Nouvelle adresse</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body" id="address_body"> 
    <div class="row"><div class="col-md">{{ form_row(form.name) }}</div></div>  
    <div class="row">
        <div class="col-md">{{ form_row(form.firstname) }}</div>
        <div class="col-md">{{ form_row(form.lastname) }}</div>
    </div> 
    <div class="row">
        <div class="col-md">{{ form_row(form.company) }}</div>
        <div class="col-md">{{ form_row(form.address) }}</div>
    </div> 
    <div class="row">
        <div class="col-md">{{ form_row(form.postal) }}</div>
        <div class="col-md">{{ form_row(form.city) }}</div>
    </div>
    <div class="row">
        <div class="col-md">{{ form_row(form.country) }}</div>
        <div class="col-md">{{ form_row(form.phone) }}</div>
    </div>
    {{ form_widget(form) }}
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-trash"></i> Annuler</button>
    <button type="submit" class="btn btn-primary btn_save"><i class="fa fa-check"></i> Enregistrer les informations</button>
</div>
{{ form_end(form) }}