{% extends 'base.html.twig' %}

{% block title %}{{product.name | capitalize}} - {% endblock %}

{% block content %}


    <div class="row" style="margin-bottom : 100px;">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price / 100)|number_format(2, ',','.') }} Â£</span>
            <hr>
            <p class="text-justify">{{ product.description | raw }}</p>
            <a href="{{ path('add_to_cart', {id: product.id}) }}" class="btn btn-primary"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Ajouter au panier</a>
        </div>
    </div>
{% endblock %}
